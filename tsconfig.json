{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "jsxFactory": "R1IO.createElement",
    "jsxFragmentFactory": "R1IO.Fragment",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "outDir": "./build",
    "allowUmdGlobalAccess": true,
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "R1IO": ["core/R1IO"],
      "@Components/*": ["bot/components/*"]
    }
  }
}
